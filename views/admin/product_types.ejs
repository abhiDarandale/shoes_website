<%- include('navbar.ejs') %>

<div class="container mt-4" style="font-size: 1.1rem;">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4 border-bottom pb-2">Add Product Types</h1>
            <div class="card mb-4 border-0 shadow-sm">
                <div class="card-body">
                    <form action="/admin/save_product_type" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label">Product Types Name</label>
                            <input type="text" class="form-control" name="product_type_name" required>
                            <label class="form-label">Product Types Image</label>
                            <input type="file" class="form-control" name="product_type_image" required>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-dark">Save</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Brands Table -->
            <h2 class="fw-bold t mb-3">Product Types List</h2> <!-- Added heading above table -->

            <div class="table-responsive">
                <table class="table table-hover border text-center">
                    <thead class="table-dark">
                        <tr>
                            <th width="10%">Sr.No</th>
                            <th width="25%">Types Name</th>
                            <th width="30%">Types Image</th>
                            <th width="20%">Status</th>
                            <th width="40%">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (var i = 0; i < types.length; i++) { %>
                            <tr>
                                <td><%= i + 1 %></td>
                                <td><%= types[i].product_type_name %></td>
                                <td>
                                    <img src="/types/<%= types[i].product_type_image %>" width="100px" height="100px" alt="Types Image">
                                </td>
                                <td>
                                    <span class="badge <%= types[i].status === 'Active' ? 'bg-success' : 'bg-secondary' %>">
                                        <%= types[i].status %>
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex justify-content-center gap-2">
                                        <a href="/admin/edit_product_type/<%= types[i].product_type_id %>" class="btn btn-sm btn-outline-dark">
                                            Edit
                                        </a>
                                        <a href="/admin/delete_product_type/<%= types[i].product_type_id %>" class="btn btn-sm btn-outline-danger">
                                            Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('footer.ejs') %>