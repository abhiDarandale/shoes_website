    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        :root {
            --sidebar-width: 250px;
            --topbar-height: 60px;
        }
        
        body {
            overflow-x: hidden;
            background-color: #f8f9fa;
            display: grid;
            grid-template-columns: var(--sidebar-width) 1fr;
            grid-template-rows: var(--topbar-height) 1fr;
            grid-template-areas: 
                "sidebar topbar"
                "sidebar main";
            min-height: 100vh;
            margin: 0;
        }
        
        /* Sidebar styling */
        .sidebar {
             grid-area: sidebar;
            background-color: black;
            color: white;
            height: 100vh;
            position: sticky;
            top: 0;
            display: flex;
            flex-direction: column;
            overflow-y:scroll;
        }
        
        .sidebar .nav-link {
            color: rgba(255, 255, 255, 0.8);
            margin-bottom: 5px;
            border-radius: 5px;
            padding: 10px 15px;
        }
        
        .sidebar .nav-link:hover {
            color: white;
            background-color: rgba(255, 255, 255, 0.1);
        }
        
        .sidebar .nav-link.active {
            color: white;
            background-color: rgba(255, 255, 255, 0.2);
        }
        
        .sidebar .nav-link i {
            margin-right: 10px;
            font-size: 1.1rem;
        }
        
        .sidebar-header {
            padding: 15px;
            font-size: 1.5rem;
            font-weight: 600;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            text-align: center;
            position: sticky;
            top: 0;
            background-color: black; /* Match sidebar color */
        }

        .sidebar-content {
            flex: 1;
            overflow-y: auto;
            padding-top: 20px; /* Space for sticky header */
            padding-bottom: 20px;
            padding-left: 15px;
            padding-right: 15px;
        }
        
        /* Topbar styling */
        .topbar {
            grid-area: topbar;
            background-color: white;
            box-shadow: 0 1px 10px rgba(0, 0, 0, 0.1);
            position: sticky;
            top: 0;
            padding: 0 20px;
        }
        
        /* Main content area */
        .main-content {
            grid-area: main;
            padding: 20px;
        }
        
        /* Card styling */
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
            margin-bottom: 20px;
        }
        
        .card-header {
            background-color: white;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            font-weight: 600;
        }
        
        /* Responsive adjustments */
        @media (max-width: 768px) {
            body {
                grid-template-columns: 1fr;
                grid-template-areas: 
                    "topbar"
                    "main";
            }
            
            .sidebar {
                display: none;
            }
            
            .sidebar.active {
                display: block;
                position: fixed;
                width: var(--sidebar-width);
                height: 100vh;
                left: 0;
                top: 0;
            }
        }
    </style>
</head>
