<%- include("navbar.ejs") %>

<div class="container mt-4" style="font-size: 1.1rem;">
  <div class="row">
    <div class="col-12">
      <h1 class="mb-4 border-bottom pb-2">Update Slider Image</h1>

      <div class="card mb-4 border-0 shadow-sm">
        <div class="card-body">
          <form action="/admin/update_slider_images" method="post" enctype="multipart/form-data">
            <input type="hidden" name="slider_id" value="<%= slider[0].slider_id %>">
            <div class="mb-3">
              <label class="form-label">Slider Title</label>
              <input type="text" class="form-control" name="slider_title" value="<%= slider[0].slider_title %>" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Slider Description</label>
              <input type="text" class="form-control" name="slider_description" value="<%= slider[0].slider_description %>" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Button Text</label>
              <input type="text" class="form-control" name="slider_button_text" value="<%= slider[0].slider_button_text %>" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Button Link</label>
              <input type="url" class="form-control" name="slider_button_link" value="<%= slider[0].slider_button_link %>" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Change Slider Image</label>
              <input type="file" class="form-control" name="slider_image">
            </div>
            <div class="mb-3">
              <label class="form-label">Current Slider Image</label><br>
              <img src="/slider/<%= slider[0].slider_image %>" width="150" height="100" alt="Slider Image" class="mb-3 rounded border">
            </div>
            <div class="d-flex justify-content-center">
              <button type="submit" class="btn btn-dark px-4">Update</button>
            </div>
          </form>
        </div>
      </div>

    </div>
  </div>
</div>

