<%- include("navbar.ejs") %>

<section class="container my-5 py-4">
  <% if (products.length > 0) { %>
  <div class="d-flex align-items-center mb-4">
    <h5 class="fw-bold" style="text-align:left;">Product : <%- products[0].product_for %></h5>
  </div>
  <% } %>
  <div class="row row-cols-1 row-cols-md-3 g-4">
  <% for (var i=0; i<products.length; i++) { %>
    <div class="col">
      <a href="/product_details/<%-products[i].product_id %>" class="text-decoration-none text-light">
      <div class="card product-card h-100 shadow-sm d-flex flex-column">
        <img src="/products/<%-products[i].product_main_image %>" class="card-img-top product-img" alt="Nike Air Max">
        <div class="card-body d-flex flex-column flex-grow-1">
          <div class="mb-2">
            <h5 class="card-title text-start mb-2"><%-products[i].product_name %></h5>
          </div>
          <p class="card-text"><%-products[i].product_description %></p>
          <div class="d-flex mb-2">
            <span style="color: #ff4757; font-weight: bold;"><%-products[i].apply_discount_percent	%>% OFF</span>
            <s class="ms-2">₹<%-products[i].product_market_price%></s>
            <span class="ms-2" style="font-weight: bold;">₹<%-products[i].product_price%></span>
          </div>
          <div class="mt-auto d-flex justify-content-betweenn">
            <a href="/product_details/<%-products[i].product_id %>" class="btn btn-light">Buy Now</a>
          </div>
        </div>
      </div>
      </a>
    </div>
    <% } %>
  </div>
</section>

<%- include("footer.ejs") %>