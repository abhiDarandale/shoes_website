    .form-control::placeholder {
      color: white;
      opacity: 1;
    }
  </style>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8 text-center">
        <h2 class="fw-bold mb-3">Stay Connected With Us Subscribe !</h2>
        <p class="lead mb-4">Get the latest updates on new products and upcoming sales</p>
        <form class="row g-2 justify-content-center">
          <div class="col-md-8">
            <input type="email" class="form-control form-control-lg" placeholder="Your email address" 
              style="color: white; background-color: #333; border: none;">
          </div>
          <div class="col-md-2">
            <button type="submit" class="btn btn-light btn-lg w-100">Subscribe</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

