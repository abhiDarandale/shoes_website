<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Login with Mobile, Email & OTP</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body class="bg-light">
  <div class="container mt-5">
    <div class="card shadow p-4" style="max-width: 420px; margin: auto;">
      <h4 class="text-center mb-4">Login via OTP</h4>

      <!-- Mobile -->
      <div class="mb-3">
        <label class="form-label">Mobile Number</label>
        <input type="text" id="mobile" class="form-control" placeholder="Enter mobile number">
      </div>

      <!-- Email -->
      <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="email" id="email" class="form-control" placeholder="Enter email">
      </div>

      <!-- OTP Input (Initially Hidden) -->
      <div class="mb-3" id="otpSection" style="display: none;">
        <label class="form-label">Enter OTP</label>
        <input type="text" id="otp" class="form-control" placeholder="Enter OTP">
      </div>

      <!-- Buttons -->
      <button id="v_email" class="btn btn-dark w-100" onclick="sendOtp(event)">Verify Email</button>
      <button id="v_otp" class="btn btn-success w-100 mt-3" onclick="VerifyOTP(event)" style="display: none;">Verify OTP</button>

      <!-- Message -->
      <div id="msg" class="text-center mt-3"></div>
    </div>
  </div>

<script>
  function sendOtp(event) {
    event.preventDefault();
    var email = document.getElementById("email").value.trim();
    var mobile = document.getElementById("mobile").value.trim();

    if (!email || !mobile) {
      alert("Please enter both email and mobile number.");
      return;
    }

    $.ajax({
      url: "/send_otp_mail",
      type: "post",
      data: { email: email, mobile: mobile },
      success: function (res) {
        alert("OTP sent successfully.");
        document.getElementById("v_email").style.display = "none";
        document.getElementById("otpSection").style.display = "block";
        document.getElementById("v_otp").style.display = "block";
      },
      error: function () {
        alert("Failed to send OTP. Try again.");
      }
    });
  }

  function VerifyOTP(event) {
    event.preventDefault();
    var otp = document.getElementById("otp").value.trim();

    if (!otp) {
      alert("Please enter the OTP.");
      return;
    }

    $.ajax({
      url: "/verify_otp",
      type: "post",
      data: { otp: otp },
      success: function (res) {
        if (res.status == "false") {
          alert("Invalid OTP. Please try again.");
        } else {
          alert("OTP Verified Successfully!");
          window.location.href = "/"; // Change as needed
        }
      },
      error: function () {
        alert("Error verifying OTP. Try again.");
      }
    });
  }
</script>

</body>
</html>